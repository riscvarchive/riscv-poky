+      *la++ = b2;
+      *la++ = b3;
+      *la++ = b4;
+      *la++ = b5;
+      *la++ = b6;
+      *la++ = b7;
+      *la++ = b8;
+    }
+  }
+
+  while (la < lend)
+    BODY(la, lb, long);
+
+  a = (char*)la;
+  b = (const char*)lb;
